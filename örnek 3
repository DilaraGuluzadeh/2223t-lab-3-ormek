
/*ornek 3.1.*\	
#include <stdio.h>
int main() 
{
    int n, i, toplam = 0;
     printf("Sayı Gir: ");
    scanf("%d", &n);
     for (i = 1; i <= n;) 
{
        toplam += i;
        ++i ;
  }
     printf("Toplam = %d", toplam);
    return 0;
}

/*ornek 3.2.*\	
#include <stdio.h>
int main()
 {
    int n, i, toplam = 0;
    printf("Sayı Gir: ");
    scanf("%d", &n);
    i = 1;
    for (; i <= n;) 
    {
        toplam += i;
        i=i+3;
    }
    printf("%d", toplam);
    return 0;
}

/*ornek 3.3.*\	

#include <stdio.h>
int main()
 {
    int n, i, toplam = 0;
    printf("Sayı Gir: ");
    scanf("%d", &n);
       for (i = 1; i <= n; i=i+3) 
    {
        toplam += i;
    }
    printf("%d", toplam);
    return 0;
}
